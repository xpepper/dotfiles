[user]
	name = Pietro Di Bello
	email = pierodibello@gmail.com
[color]
	ui = auto
[alias]
	st = status
	co = checkout
	ci = commit
[apply]
	whitespace = nowarn
[core]
	editor = mate -w
	quotepath = false
	excludesfile = /Users/pietrodibello/.gitignore_global
[github]
	user = xpepper
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
